
<%# title %>
<div class="text-center py-5">
  <h1>Cr√©er un nouveau Gossip</h1>
</div>

<%# Formulaire %>
<div class="d-flex h-100 justify-content-center align-items-center">
<div class="card text-center d-flex w-50">

  <div class="card-header">
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <%= label_tag 'titre du gossip' %> <br>
  </div>

  <div class="card-body">
    <%= text_field_tag 'title' %>
  </div>

  <div class="card-header">
  <%= label_tag 'Description de ton gossip' %> <br>
  </div>

  <div class="card-body">
  <%= text_area_tag 'content' %>
  </div>


  <%= submit_tag "Soumet ton gossip" %>
  <% end %>

</div> 
</div>
